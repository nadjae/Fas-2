void setup(){
  size( 1280, 720 );
  startTime = System.currentTimeMillis();
}

void draw(){
  // Kontrollera om Splash screenen visats tillräckligt länge. Isf byt tillstånd.
  long now = System.currentTimeMillis();
  boolean endSplashState = now > ( startTime + splashTime );
  if( state == 0 && endSplashState ){
    state = 1;
  }
  
  
  switch( state ){
    case 0:
      //drawSplashScreen();
      //ETT ANNAT TILLSTÅND/METOD
      break;
    case 1:
      //drawUI();
      //ETT ANNAT TILLSTÅND/METOD
      break;
    case 2:
      exit();
      break;
  }
}

void mousePressed(){
 state += 1; 
}
